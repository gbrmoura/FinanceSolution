@page
@model FinanceSolution.Inteface.Pages.AccountAccruals.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    th.dt-center, td.dt-center { text-align: center; }
</style>

@Html.AntiForgeryToken()


@section scripts{
<script>

    if ('@ViewData["success"]' == 'True') {
        Swal.fire({
            title: 'Sucesso!',
            text: 'Tipo de lançamento deletado com sucesso!',
            type: 'success',
            confirmButtonText: 'Ok'
        }).then(function() {
            window.location.href = "/AccountAccruals/Index";
        });
    }

    if ('@ViewData["notFound"]' == 'True') {
        Swal.fire({
            title: 'Erro!',
            text: 'Tipo de lançamento não encontrado.',
            type: 'error',
            confirmButtonText: 'Ok'
        }).then(function() {
            window.location.href = "/AccountAccruals/Index";
        });
    }

    if ('@ViewData["error"]' == 'True') {
        Swal.fire({
            title: 'Erro!',
            text: 'Erro ao deletar tipo de lançamento!',
            type: 'error',
            confirmButtonText: 'Ok'
        });
    }

    if ('@ViewData["internal"]' == 'True') {
        Swal.fire({
            title: 'Erro!',
            text: 'Não foi possivel cadastrar tipo de lançamento \n Erro interno do Servidor!',
            type: 'error',
            confirmButtonText: 'Ok'
        });
    }

</script>
}