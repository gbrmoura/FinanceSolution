@page
@model FinanceSolution.Inteface.Pages.PaymentMethod.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    th.dt-center, td.dt-center { text-align: center; }
</style>

@Html.AntiForgeryToken()


@section scripts{
<script>

    if ('@ViewData["success"]' == 'True') {
        Swal.fire({
            title: 'Sucesso!',
            text: 'Metodo de pagamento deletado com sucesso!',
            type: 'success',
            confirmButtonText: 'Ok'
        }).then(function() {
            window.location.href = "/PaymentMethod/Index";
        });
    }

    if ('@ViewData["error"]' == 'True') {
        Swal.fire({
            title: 'Erro!',
            text: 'Erro ao deletar metodo de pagamento!',
            type: 'error',
            confirmButtonText: 'Ok'
        });
    }

    if ('@ViewData["internal"]' == 'True') {
        Swal.fire({
            title: 'Erro!',
            text: 'Não foi possivel cadastrar metodo de pagamento \n Erro interno do Servidor!',
            type: 'error',
            confirmButtonText: 'Ok'
        });
    }

    if ('@ViewData["notFound"]' == 'True') {
        Swal.fire({
            title: 'Erro!',
            text: 'Método de pagamento não encontrado.',
            type: 'error',
            confirmButtonText: 'Ok'
        }).then(function() {
            window.location.href = "/PaymentMethod/Index";
        });
    }

</script>
}