@page
@model FinanceSolution.Inteface.Pages.AccountEntry.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()

<form method="post" enctype="multipart/form-data" id="scanForm">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Lançamento</h4>
                    
                    <div style="margin-top:20px; align-content:center">
                        <button id="save-changes" class="btn btn-success" type="submit"> Criar </button>
                        <button id="cancel-changes" class="btn btn-danger" type="button" > Cancelar </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{
<script>
    $(document).ready(function () {

    });
    
    $('#cancel-changes').click(function () {
        location.href = "/AccountEntry/Index";
    });

    if ('@ViewData["success"]' == 'True') {
        Swal.fire({
            title: 'Sucesso!',
            text: 'lançamento criado com sucesso!',
            type: 'success',
            confirmButtonText: 'Ok'
        }).then(function() {
            window.location.href = "/AccountEntry/Index";
        });
    }

    if ('@ViewData["error"]' == 'True') {
        Swal.fire({
            title: 'Erro!',
            text: 'Erro ao criar lançamento, confirme os dados e envie novamente!',
            type: 'error',
            confirmButtonText: 'Ok'
        });
    }

    if ('@ViewData["internal"]' == 'True') {
        Swal.fire({
            title: 'Erro!',
            text: 'Não foi possivel cadastrar lançamento \n Erro interno do Servidor!',
            type: 'error',
            confirmButtonText: 'Ok'
        });
    }

    if ('@ViewData["inUse"]' == 'True') {
        Swal.fire({
            title: 'Erro!',
            text: 'Já existe um lançamento com esta descrição!',
            type: 'error',
            confirmButtonText: 'Ok'
        });
    }

    

</script>
}