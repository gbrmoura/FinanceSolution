@page
@model FinanceSolution.Inteface.Pages.AccountEntry.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    th.dt-center, td.dt-center { text-align: center; }

    .cash-in {
        background-color: rgba(15, 255, 15, 0.14) !important;
    }

    .cash-out {
        background-color: rgba(255, 15, 15, 0.14) !important;
    }

</style>

@Html.AntiForgeryToken()

<div class="row">
    <div class="col-lg-12">
        <p>
            <a asp-page="Create" class="btn btn-primary">Novo</a>
        </p>
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Lançamentos</h4>
                    <div class="table-responsive">
                        <div class="dataTables_wrapper container-fluid dt-bootstrap4">
                            <div class="row">
                                <div class="col-md-12">
                                    <table id="table-entry" class="table table-striped table-hover table-responsive-sm table-bordered dataTable" role="grid">
                                        <thead>
                                        <tr>
                                            <th>Codigo</th>
                                            <th>Data</th>
                                            <th>Descrição</th>
                                            <th>Valor</th>
                                            <th>Tipo</th>
                                            <th>Método de Pagamento</th>
                                            <th>Alterar</th>
                                            <th>Remover</th>
                                        </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts { 
    <script>

    $(document).ready(function () {


        var table = $("#table-entry").DataTable({
            processing: true,
            serverSide: true,
            language: {
                url: "/language/ptbr.json",
            },
            rowId: "id",
            ajax: {
                url: "/AccountEntry/Index?handler=Entrys",
                type: "POST",
                headers: {
                    RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                },
                async: true,    
            },
            columnDefs: [
                {
                    className: "dt-center", 
                    targets: "_all"
                }
            ],
            columns: [
                {
                    data: "id",
                    bSortable: false,
                    autoWidth: true,
                },
                {
                    data: "date",
                    bSortable: false,
                    autoWidth: true,
                },
                {
                    data: "description",
                    bSortable: false,
                    autoWidth: true,
                },
                {
                    data: null,
                    bSortable: false,
                    autoWidth: true,
                    render: function(data, type, row) {
                        toggleColor(data.id, data.accrualsType);
                        return 'R$ ' + data.value.toFixed(2).replace('.', ',');
                    }
                },
                {
                    data: "accruals",
                    bSortable: false,
                    autoWidth: true,
                },
                {
                    data: "paymentMethod",
                    bSortable: false,
                    autoWidth: true,
                },
                {
                    data: null,
                    bSortable: false,
                    width: "5%",
                    render: function (data, type, row) {
                        return  '<div>' +
                                    `<a href="/AccountEntry/Edit?id= ${ data.id }"><i class="fa fa-pencil"></a>` +
                                '</div>';
                    }   
                },
                {
                    data: null,
                    bSortable: false,
                    width: "5%",
                    render: function (data, type, row) {
                        return  '<div>' +
                                    `<a href="/AccountEntry/Delete?id=${ data.id }"><i class="fa fa-remove"></a>` +
                                '</div>';
                    }   
                }

            ]
        });
    });

    function  toggleColor(element, type) {
 
        var tr =  $('#' + element);

        if (type == 1) {
            tr.addClass('cash-in');
        } else if (type == 2) {
            tr.addClass('cash-out');
        }
        
    }

</script>
}